  style.
    /* Container Styling */
    .container {
      max-width: 1240px;
      margin: 0 auto;
      padding: 40px 20px;
      background: #f9f9f9;
    }

    /* Main Heading */
    .main-heading {
      text-align: center;
      margin-bottom: 50px;
      color: #1a1a1a;
      font-size: 2.5rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    /* Course Grid */
    .course-paths {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
      gap: 40px;
    }

    /* Course Card */
    .course-card {
      background: #ffffff;
      border-radius: 12px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      transition: all 0.3s ease;
      display: flex;
      flex-direction: column;
    }

    .course-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
    }

    /* Course Image */
    .course-image {
      width: 100%;
      height: 220px;
      overflow: hidden;
      background: #e0e0e0; /* Fallback color if image fails to load */
    }

    .course-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: center;
      display: block;
      transition: transform 0.3s ease;
    }

    .course-card:hover .course-image img {
      transform: scale(1.05);
    }

    /* Course Info */
    .course-info {
      padding: 25px;
      text-align: center;
      flex-grow: 1;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    .course-info h3 {
      margin: 0 0 12px;
      color: #2c3e50;
      font-size: 1.6rem;
      font-weight: 600;
    }

    .course-info p {
      margin: 0 0 20px;
      color: #7f8c8d;
      font-size: 1rem;
      line-height: 1.5;
    }

    /* Button Styling */
    .btn {
      display: inline-block;
      padding: 12px 25px;
      background: linear-gradient(135deg, #3498db, #2980b9);
      color: white;
      text-decoration: none;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-size: 1rem;
      font-weight: 500;
      transition: all 0.3s ease;
    }

    .btn:hover {
      background: linear-gradient(135deg, #2980b9, #1f618d);
      transform: translateY(-2px);
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .main-heading {
        font-size: 2rem;
      }

      .course-paths {
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 30px;
      }

      .course-image {
        height: 180px;
      }

      .course-info {
        padding: 20px;
      }

      .course-info h3 {
        font-size: 1.4rem;
      }

      .course-info p {
        font-size: 0.95rem;
      }

      .btn {
        padding: 10px 20px;
      }
    }

    @media (max-width: 480px) {
      .course-paths {
        grid-template-columns: 1fr;
      }

      .course-image {
        height: 200px;
      }
    }